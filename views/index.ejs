<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pattern Generator</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Pattern Generator</h1>
    <div class="row mt-4">
      <!-- Pattern Options -->
      <div class="col-md-4">
        <form id="patternForm">
          <div class="mb-3">
            <label for="patternType" class="form-label">Select Pattern</label>
            <select class="form-select" id="patternType" name="patternType">
              <option value="grid">Grid</option>
              <option value="spiral">Spiral</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="primaryColor" class="form-label">Primary Color</label>
            <input type="color" id="primaryColor" name="colors[]" class="form-control">
          </div>
          <div class="mb-3">
            <label for="size" class="form-label">Size</label>
            <input type="range" id="size" name="size" class="form-range" min="10" max="100" value="50">
          </div>
          <div class="mb-3">
            <label for="density" class="form-label">Density</label>
            <input type="range" id="density" name="density" class="form-range" min="1" max="10" value="5">
          </div>
          <button type="button" class="btn btn-primary" id="generateBtn">Generate</button>
          <button type="button" class="btn btn-success mt-2" id="exportBtn">Export</button>
        </form>
      </div>
      <!-- Canvas Preview -->
      <div class="col-md-8">
        <canvas id="patternCanvas" width="600" height="400" class="border"></canvas>
      </div>
      <div id="patternSvg" class="border"></div>

    </div>
  </div>

  <script src="/js/script.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/svg.js/3.1.1/svg.min.js"></script>
</body>
</html>
